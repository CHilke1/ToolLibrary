@model IEnumerable<ToolLibrary.Models.Rental>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CheckedOut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tool)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CheckedOut)
            </td>
            <td>
                @if (item.DueDate < DateTime.Now) { <span style="color:red">@Html.DisplayFor(modelItem => item.DueDate)</span> }
                else { @Html.DisplayFor(modelItem => item.DueDate) }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tool.Name)
            </td>
            <td>
                @*Html.ActionLink("Edit", "Edit", new { id=item.Id })*@ 
                @*Html.ActionLink("Details", "Details", new { id=item.Id })*@ 
                @Html.ActionLink("Return", "Delete", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>

